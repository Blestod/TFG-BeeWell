<resources>
    <!-- Base application theme for Light Mode -->
    <style name="Theme.TFG_BeeWell_APP" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar and Navigation bar -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:fontFamily">@font/nunitoregular</item>

        <item name="colorControlNormal">@color/beeBlack</item>
        <item name="colorControlActivated">@color/beeBlack</item>

        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>

    </style>

    <style name="CustomBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="InsulinDropDown"
        parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">

        <item name="android:textAppearance">
            @style/TextAppearance.MaterialComponents.Body1
        </item>
        <item name="boxStrokeColor">@color/teal_200</item>
        <item name="android:textColor">@color/beeBlack</item>
        <item name="colorOnSurface">@color/beeBlack</item>
        <item name="android:textColorHint">@color/beeBlack</item>

    </style>
    <style name="ThemeOverlay.Bee.Dropdown" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:textColorPrimary">@color/beeBlack</item>
    </style>


    <style name="Theme.BeeWell" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- … existing attributes … -->
    </style>

    <style name="Theme.BeeWell.Fullscreen" parent="Theme.BeeWell">
        <!-- draw under status / nav bars -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <!-- remove action-bar placeholder if using AppCompat -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



</resources>
