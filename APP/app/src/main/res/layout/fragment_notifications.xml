<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- ─────────────── ACHIEVEMENTS ─────────────── -->
        <androidx.cardview.widget.CardView
            android:id="@+id/achievementsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/beeYellow"
            android:elevation="8dp"
            app:cardCornerRadius="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="64dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/achievementsToggleBtn"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="3dp"
                        android:text="Achievements"
                        android:textColor="@color/beeBlue"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/achievementsToggleBtn"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="Expand"
                        android:src="@drawable/unfold"
                        app:tint="@color/beeBlue" />
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvAchievements"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@color/beeWhite"
                        android:paddingTop="8dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ─────────────── OBSERVATIONS ─────────────── -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:text="Observations"
            android:textColor="@color/beeBlue"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Contenedor para gráfico o fallback -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginHorizontal="8dp">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/chartViewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- Mensaje sin datos -->
            <TextView
                android:id="@+id/noChartsText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="No glucose data available yet"
                android:textColor="@color/beeGrey"
                android:textSize="16sp"
                android:visibility="gone" />
        </FrameLayout>

        <!-- Interpretación generada por GPT -->
        <TextView
            android:id="@+id/interpretationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:paddingBottom="64dp"
            android:text="Lorem ipsum dolor sit amet...\nMore generated insights here..."
            android:textColor="@color/beeBlack"
            android:textSize="16sp" />   <!-- margen para que no lo tape el FAB -->
    </LinearLayout>
</ScrollView>
