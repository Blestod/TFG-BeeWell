<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beeGreen"
    android:padding="0dp">

    <!-- This parent LinearLayout stacks everything vertically -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 1) RelativeLayout with rounded_card_bg for white+green cards -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_card_bg">

            <!-- White card at top -->
            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/whiteCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="64dp"
                android:elevation="4dp"
                app:cardUseCompatPadding="false"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="372dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_card_bg"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Text content (lorem ipsum) -->
                    <TextView
                        android:id="@+id/textInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean euismod bibendum laoreet. Proin gravida dolor sit amet lacus."
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Green card below -->
            <LinearLayout
                android:id="@+id/greenCard"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/whiteCard"
                android:layout_alignStart="@+id/whiteCard"
                android:layout_alignEnd="@+id/whiteCard"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="18dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/green_card_bg"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="80mg/dl"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="80bpm"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="8hr"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="36ÂºC"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />
            </LinearLayout>
        </RelativeLayout>

        <!-- 2) Red section: placeholder for future chart (outside the yellow portion) -->
        <FrameLayout
            android:id="@+id/chartHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:contentDescription="Chart placeholder" />

        <!-- 3) Blue section: block of long text (also outside the yellow portion) -->
        <LinearLayout
            android:id="@+id/longTextContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/predictText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean euismod bibendum laoreet. Proin gravida dolor sit amet lacus."
                android:textColor="@android:color/black"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
