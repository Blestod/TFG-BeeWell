<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beeWhite"
    android:padding="16dp">

    <!-- Form container -->
    <LinearLayout
        android:id="@+id/formContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <AutoCompleteTextView
            android:id="@+id/foodSearchInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/beeGrey"
            android:completionThreshold="2"
            android:hint="Search food (e.g., Apple)"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="@color/beeBlack"
            android:textColorHint="@color/material_dynamic_neutral40"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/gramsInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Grams"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:textColor="@color/beeBlack"
            android:textColorHint="@color/material_dynamic_neutral40"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Save button pinned to bottom-end -->
    <Button
        android:id="@+id/saveMealBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/beeBlue"
        android:text="Save"
        android:textColor="@android:color/white"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
