<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menuOverlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:clickable="true"
    android:focusable="true"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@drawable/drawable_menu_bg"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="24dp">

        <ImageView
            android:id="@+id/closeMenuBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:layout_margin="16dp"
            android:contentDescription="Close menu"
            android:src="@drawable/x"
            app:tint="@color/beeBlue" />


        <TextView
            android:id="@+id/menu_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Profile"
            android:textColor="@color/beeBlack"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/menu_terms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Terms"
            android:textColor="@color/beeBlack"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/menu_aboutus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="About Us"
            android:textColor="@color/beeBlack"
            android:textSize="20sp" />
    </LinearLayout>
</FrameLayout>
