<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ───── Permisos de red ───── -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- ───── Permisos de lectura Health Connect ───── -->
    <uses-permission android:name="android.permission.health.READ_TOTAL_CALORIES_BURNED"/>
    <uses-permission android:name="android.permission.health.READ_HEART_RATE"/>
    <uses-permission android:name="android.permission.health.READ_BODY_TEMPERATURE"/>
    <uses-permission android:name="android.permission.health.READ_SLEEP"/>
    <!-- Blood-glucose (glucosa capilar/CGM) -->
    <uses-permission android:name="android.permission.health.READ_BLOOD_GLUCOSE"/>
    <!-- Oxygen Saturation (SpO2) -->
    <uses-permission android:name="android.permission.health.READ_OXYGEN_SATURATION"/>

    <!-- Background Read -->
    <uses-permission android:name="android.permission.health.READ_HEALTH_DATA_IN_BACKGROUND"/>
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TFG_BeeWell_APP"
        android:usesCleartextTraffic="true"
        tools:targetApi="34">

        <!-- ───── Lanzador ───── -->
        <activity
            android:name=".MainEntryActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Resto de tus pantallas normales -->
        <activity android:name=".MainActivity" android:screenOrientation="portrait" android:exported="true"/>
        <activity android:name=".LoginActivity" android:screenOrientation="portrait"/>
        <activity android:name=".RegisterActivity" android:screenOrientation="portrait"/>
        <activity android:name=".TermsActivity" android:screenOrientation="portrait"/>
        <activity android:name=".TermsReadActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ProfileActivity" android:screenOrientation="portrait"/>

        <!-- ─────────────────────────────────────────────
             1) ACTIVITY de explicación de permisos
        ────────────────────────────────────────────── -->
        <activity
            android:name=".HealthRationaleActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="androidx.health.ACTION_SHOW_PERMISSIONS_RATIONALE"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <!-- ─────────────────────────────────────────────
             2) ALIAS para View-Permission-Usage (solo API 34)
        ────────────────────────────────────────────── -->
        <activity-alias
            android:name=".ViewPermissionUsageActivity"
            android:exported="true"
            android:targetActivity=".HealthRationaleActivity"
            android:permission="android.permission.START_VIEW_PERMISSION_USAGE">

            <intent-filter>
                <action android:name="android.intent.action.VIEW_PERMISSION_USAGE"/>
                <category android:name="android.intent.category.HEALTH_PERMISSIONS"/>
            </intent-filter>
        </activity-alias>

    </application>

    <!-- Health Connect package query -->
    <queries>
        <package android:name="com.google.android.apps.healthdata"/>
    </queries>

</manifest>
